@model MeyawoPortfolio.Models.TblContact

<section class="section" id="contact">
    <div class="container text-center">
        <p class="section-subtitle">Nasıl iletişim kurabilirsin?</p>
        <h6 class="section-title mb-5">Bana Ulaşın</h6>
        <!-- contact form -->
        <form method="post" class="contact-form col-md-10 col-lg-8 m-auto">
            <div class="form-row">
                <div class="form-group col-sm-6">
                    @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control", placeholder = "Ad-Soyad" })
                </div>
                <div class="form-group col-sm-6">
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "E-Posta" })
                </div>
                <div class="form-group col-sm-12">
                    @Html.TextAreaFor(x => x.Message, new { @class = "form-control", placeholder = "Mesaj", rows = "6" })
                </div>
                <div>
                    @Html.HiddenFor(x => x.SendDate, new { @Value = DateTime.Now })
                    @Html.HiddenFor(x => x.IsRead, new { @Value = false })
                    @Html.HiddenFor(x => x.Messagecategory, new { @Value = 0 })
                </div>
                <div class="form-group col-sm-12 mt-3">
                    <button class="btn btn-outline-primary rounded">Mesaj Gönder</button>
                </div>
                
            </div>
        </form>
        <!-- end of contact form -->
    </div><!-- end of container -->
</section>
